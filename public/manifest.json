{
  "manifest_version": 3,
  "name": "ME",
  "version": "1.0",
  "description": "ME extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": "/images/app.png",
    "default_title": "ME Wallet"
  },
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>",
        "http://localhost:8000/",
        "http://localhost:8000/*",
        "http://192.168.0.207/*"
      ],
      "js": [
        "static/js/content.js"
      ]
    }
  ],
  "permissions": ["storage"],
  "icons": {"128": "/images/app.png"},
  "web_accessible_resources": [
    {
      "resources": ["/images/app.png", "/static/js/injectedScript.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
