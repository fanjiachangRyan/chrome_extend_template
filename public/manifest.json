{
  "manifest_version": 3,
  "name": "ME Pass",
  "version": "1.0",
  "description": "ME Pass",
  "action": {
    "default_popup": "index.html",
    "default_icon": "/images/app.png",
    "default_title": "ME Pass"
  },
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:8000/",
        "http://localhost:8000/*",
        "http://192.168.0.207/",
        "http://192.168.0.207/*",
        "http://118.175.0.246/",
        "http://118.175.0.246/*"
      ],
      "js": [
        "static/js/content.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {"128": "/images/app.png"},
  "web_accessible_resources": [
    {
      "resources": ["/images/app.png", "/static/js/injectedScript.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self';object-src 'none'"
  }
}
